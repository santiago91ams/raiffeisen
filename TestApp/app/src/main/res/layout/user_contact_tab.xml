<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:elevation="@dimen/tab_elevation"
    android:background="@drawable/user_contact_tab"
    android:weightSum="1"
    android:gravity="center"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_details_height">


    <ImageView
        android:id="@+id/icon_pic"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_phone_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight=".9"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/flag"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/icon_contact_type_value"
                android:text="number"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/icon_contact_type"
            android:text="Phone"
            android:textSize="14sp"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <ImageView
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_speaker_notes_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>